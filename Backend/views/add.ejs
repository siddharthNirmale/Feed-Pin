<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-4 sm:px-10 py-5 text-white">
  <h1 class="text-xl sm:text-2xl font-semibold leading-none mt-2 mb-7 justify-center flex">
    Create New Post
  </h1>
  <hr class="my-5 opacity-10">

  <form action="/createpost" method="POST" enctype="multipart/form-data" class="flex flex-col items-center justify-center mt-10 gap-4 w-full">
    <input type="file" name="postImage" id="image" class="block w-full sm:w-2/3 md:w-1/2 px-3 py-2 border-2 rounded-xl">
    <input type="text" name="title" id="title" class="block w-full sm:w-2/3 md:w-1/2 px-3 py-2 border-2 rounded-xl" placeholder="Title">
    <textarea name="description" id="description" class="block w-full sm:w-2/3 md:w-1/2 px-3 py-2 h-40 sm:h-60 border-2 rounded-xl" placeholder="Description"></textarea>
    <input type="submit" value="Create Post" class="block w-full sm:w-2/3 md:w-1/2 bg-red-600 text-white rounded-lg mt-5 px-3 py-2 text-sm font-semibold hover:bg-red-700">
  </form>
</div>

