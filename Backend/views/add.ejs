<% include ./partials/header.ejs %>


<div class="w-full min-h-screen  bg-zinc-800  px-10 py-5 text-white" >
  <h1  class="text-xl font-semibold  leading-none mt-2 mb-7 justify-center flex">
    Create New Post
  </h1>
  <hr class="my-5 opacity-10 mt-3">
  <form action="/createpost" method="POST" enctype="multipart/form-data" class="flex flex-col items-center justify-center mt-10">
    <input type="file" name="postImage" id="image" class="block w-1/3 px-3 py-2 border-2 rounded-xl mb-5 ">
    <input type="text" name="title" id="title" class="block w-1/3 px-3 py-2 border-2 rounded-xl mb-5" placeholder="Title">
    <textarea name="description" id="description" class="block w-1/3 px-3 py-2  h-60  border-2 rounded-xl mb-5" placeholder="Description"></textarea>
    <input type="submit" value="Create Post" class="block w-1/3 px-3 py-2rounded-xl px-7 py-2 bg-red-600 rounded-lg mt-10 inline-block font-semibold text-white text-sm font-semibold">
  </form>

  
  
</div>


