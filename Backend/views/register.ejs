<% include ./partials/header.ejs %>
<!-- this is register page  -->
<div class="w-full min-h-screen bg-[url(https://images.unsplash.com/photo-1541701494587-cb58502866ab?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] bg-no-repeat bg-cover bg-center flex items-center justify-center px-4">
  <div class="w-full sm:w-[80%] md:w-[60%] lg:w-[40%] backdrop-blur-lg bg-blue/50 px-6 sm:px-10 py-10 rounded-2xl">
    <h1 class="text-2xl sm:text-3xl text-center font-semibold capitalize tracking-tighter text-zinc-700 leading-none mt-2 mb-7">
      Create New Account.
    </h1>

    <form action="/register" method="POST">
      <input class="border-2 rounded-xl block mt-2 w-full px-3 py-2 text-sm sm:text-base" type="text" name="username" placeholder="Username">
      <input class="border-2 rounded-xl block mt-2 w-full px-3 py-2 text-sm sm:text-base" type="text" name="fullname" placeholder="Full Name">
      <input class="border-2 rounded-xl block mt-2 w-full px-3 py-2 text-sm sm:text-base" type="email" name="email" placeholder="Email">
      <input class="border-2 rounded-xl block mt-2 w-full px-3 py-2 text-sm sm:text-base" type="number" name="contact" placeholder="Contact No">
      <input class="border-2 rounded-xl block mt-2 w-full px-3 py-2 text-sm sm:text-base" type="password" name="password" placeholder="Password">

      <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white text-sm sm:text-base" type="submit" value="Create New Account">

      <p class="text-xs sm:text-sm font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto">
        By continuing, you agree to Pinterest's 
        <a class="text-blue-600" href="#">Terms of Service</a> and acknowledge you've read our 
        <a class="text-blue-600" href="#">Privacy Policy</a>
      </p>
    </form>

    <a href="/" class="mt-7 inline-block text-sm sm:text-base font-semibold text-zinc-700 text-center w-full">
      Already have an account? Sign In
    </a>
  </div>
</div>

