<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen  text-white">

  <div class="cards flex flex-wrap justify-center pt-24 gap-6 px-4 sm:px-10">

    <% user.posts.forEach(function(post) { %>
      <div
        class="card w-32 sm:w-36 rounded-2xl overflow-hidden shadow-md hover:shadow-xl hover:scale-[1.04] transition transform bg-white/10 backdrop-blur-lg border border-white/10">
        
        <div class="w-full aspect-square overflow-hidden">
          <img class="object-cover w-full h-full hover:scale-110 transition duration-500" src="/images/uploads/<%= post.image %>" alt="">
        </div>

        <div class="p-3">
          <h5 class="text-xs sm:text-sm font-semibold text-zinc-200 line-clamp-1">
            <%= post.title %>
          </h5>
        </div>

      </div>
    <% }) %>

  </div>

</div>

<% include ./partials/footer.ejs %>
