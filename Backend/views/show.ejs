<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white">

  <div class="cards flex flex-wrap justify-center pt-20 gap-5 px-4 sm:px-10">
    <% user.posts.forEach(function(post) { %>
      <div class="card w-28 sm:w-32">
        <div class="w-full aspect-square bg-sky-200 rounded-xl overflow-hidden">
          <img class="object-cover w-full h-full" src="/images/uploads/<%= post.image %>" alt="">
        </div>
        <h5 class="text-xs sm:text-md font-medium opacity-50 mt-2"><%= post.title %></h5>
      </div>
    <% }) %>
  </div>

</div>

<% include ./partials/footer.ejs %>
