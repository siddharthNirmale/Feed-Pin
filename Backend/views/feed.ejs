<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white">

  <div class="cards flex flex-wrap justify-center pt-20 gap-5 px-4 sm:px-10">
    <% posts.forEach(function(post) { %>
      <div class="card w-32 sm:w-40">
        <div class="w-full aspect-square bg-zinc-200 rounded-xl overflow-hidden">
          <img class="object-cover w-full h-full" src="/images/uploads/<%= post.image %>" alt="">
        </div>
        <h5 class="text-sm sm:text-md font-bold mt-2"><%= post.title %></h5>
        <div class="text-xs sm:text-sm font-normal opacity-70">by <%= post.user.username %></div>
      </div>
    <% }) %>
  </div>

</div>

<% include ./partials/footer.ejs %>
