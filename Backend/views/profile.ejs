<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white">

  <form action="/fileupload" id="uploadForm" method="POST" enctype="multipart/form-data" hidden>
    <input type="file" name="image">
    <button type="submit">Upload</button>
  </form>

  <div class="profdets flex flex-col items-center justify-center pt-20 space-y-3 px-4">
    <div class="relative">
      <span id="uploadIcon"
        class="absolute right-0 bottom-0 text-3xl sm:text-4xl text-white cursor-pointer rounded-full bg-black/50 p-2 hover:bg-black/70">
        <i class="ri-edit-circle-line"></i>
      </span>
      <div class="w-24 h-24 sm:w-32 sm:h-32 bg-blue-200 rounded-full overflow-hidden">
        <img class="object-cover w-full h-full" src="/images/uploads/<%= user.profileImage %>" alt="">
      </div>
    </div>

    <h1 class="text-2xl sm:text-3xl font-semibold mt-3 mb-1">
      <%= user.name %>
    </h1>
    <h3 class="text-sm sm:text-md">@<%= user.username %></h3>

    <div class="flex flex-col sm:flex-row gap-3 mt-3">
      <a href="/edit"
        class="px-6 py-2 bg-zinc-600 rounded-full inline-block font-semibold text-white text-sm text-center">
        Edit Profile
      </a>
      <a href="/add"
        class="px-6 py-2 bg-red-600 rounded-lg inline-block font-semibold text-white text-sm text-center">
        Add New Post
      </a>
    </div>

    <div class="cards flex flex-wrap justify-center mt-10 gap-5 px-4">
      <div class="card w-32 sm:w-40">
        <div class="w-full aspect-square bg-zinc-700 rounded-xl overflow-hidden">
          <img class="object-cover w-full h-full" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
        </div>
        <a href="/show/posts" class="text-base sm:text-lg inline-block font-semibold mt-3">
          Your Uploaded Pins
        </a>
        <h5 class="text-sm font-medium opacity-50">
          <%= user?.posts.length %> Pins
        </h5>
      </div>
    </div>
  </div>

  <script>
    document.querySelector('#uploadIcon').addEventListener('click', function () {
      document.querySelector("#uploadForm input[type='file']").click();
    });

    document.querySelector("#uploadForm input[type='file']").addEventListener('change', function () {
      document.querySelector("#uploadForm").submit();
    });
  </script>

<% include ./partials/footer.ejs %>
