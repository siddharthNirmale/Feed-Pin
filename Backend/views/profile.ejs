<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen  text-white">

  <!-- Hidden Upload Form -->
  <form action="/fileupload" id="uploadForm" method="POST" enctype="multipart/form-data" hidden>
    <input type="file" name="image">
    <button type="submit">Upload</button>
  </form>

  <div class="profdets flex flex-col items-center justify-center pt-24 px-4 space-y-4">

    <!-- Profile Image with Upload Icon -->
    <div class="relative group">
      <div class="w-28 h-28 sm:w-36 sm:h-36 rounded-full overflow-hidden ring-4 ring-zinc-700 shadow-lg">
        <img class="object-cover w-full h-full" src="/images/uploads/<%= user.profileImage %>" alt="">
      </div>
      <span id="uploadIcon"
        class="absolute right-0 bottom-0 translate-x-1 translate-y-1 text-3xl sm:text-4xl text-white cursor-pointer rounded-full bg-black/60 p-2 backdrop-blur-sm hover:bg-black/80 transition">
        <i class="ri-edit-circle-line"></i>
      </span>
    </div>

    <!-- User Info -->
    <h1 class="text-3xl sm:text-4xl font-bold mt-3 tracking-tight">
      <%= user.name %>
    </h1>
    <h3 class="text-zinc-400 text-sm sm:text-base">@<%= user.username %></h3>

    <!-- Buttons -->
    <div class="flex flex-col sm:flex-row gap-3 mt-6">
      <a id="editProfile" 
        class="px-6 py-2.5 bg-zinc-700 hover:bg-zinc-600 rounded-full font-medium text-sm text-center shadow-md transition">
        Edit Profile
      </a>
      <a href="/add"
        class="px-6 py-2.5 bg-red-600 hover:bg-red-500 rounded-full font-medium text-sm text-center shadow-md transition">
        Add New Post
      </a>
    </div>

    <!-- Cards Section -->
    <div class="cards flex flex-wrap justify-center mt-12 gap-6 px-2">
      <div class="card w-36 sm:w-44 bg-zinc-100/20 shadow-md backdrop-blur-md rounded-2xl p-4 hover:shadow-xl transition">
        <div class="w-full aspect-square rounded-xl overflow-hidden mb-4">
          <img class="object-cover w-full h-full" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
        </div>
        <a href="/show/posts"
          class="block text-lg font-semibold mb-1 hover:underline">
          Your Uploaded Pins
        </a>
        <h5 class="text-sm text-zinc-400">
          <%= user?.posts.length %> Pins
        </h5>
      </div>
    </div>

  </div>

  <script>
    document.querySelector('#uploadIcon').addEventListener('click', () => {
      document.querySelector("#uploadForm input[type='file']").click();
    });

    document.querySelector("#uploadForm input[type='file']").addEventListener('change', () => {
      document.querySelector("#uploadForm").submit();
    });

    document.getElementById("editProfile").addEventListener("click", function(e) {
    e.preventDefault();

    Toastify({
      text: "Profile editing feature coming soon!",
      duration: 3000,
      gravity: "top",
      position: "right",
      close: true,
      style: {
        background: "linear-gradient(to right, #E91E63, #F44336)"
      }
    }).showToast();
  });
  </script>


<% include ./partials/footer.ejs %>
